<!--member/login/login.wxml-->

<view class='content'>
  <view class='account'>
    <view class='title'>账号</view>
      <view class='num'><input bindinput='accountInput' placeholder='用户名/邮箱/手机号' placeholder-style='color:#999999;'></input>
      </view>
    </view>
  <view class='hr'></view>
    <view class='account'>
      <view class='title'>密码</view>
        <view class='num'><input bindinput='accountInput' placeholder='请输入密码' placeholder-style='color:#999999;'></input>
        </view>
    </view>
  <view class='hr'></view>
  <button class='btn' disabled="{{disabled}}" type="{{btnstate}}" bindtap='login'>登录</button>
  <view class='operate'>
    <view><navigator url="../../member/register/register">商家注册</navigator></view>
    <view>找回密码</view>
  </view>
</view>